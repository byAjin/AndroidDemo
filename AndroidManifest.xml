<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spean90.androiddemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.spean90.androiddemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- simpleAdapterListView Activity -->
        <activity 
            android:name="com.spean90.androiddemo.SimpleAdapterListViewActivity"
            android:label="@string/app_name"></activity>
        <activity 
            android:name="com.spean90.androiddemo.DateTimePickerActivity"></activity>
        <activity 
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:name="com.spean90.androiddemo.GridViewActivity"></activity>
        <activity 
            android:name="com.spean90.androiddemo.spinnerActivity"></activity>
        <activity android:name="com.spean90.androiddemo.ProgressBarActivity"></activity>
        <activity android:name="com.spean90.androiddemo.WebViewActivity"></activity>
        <activity android:name="com.spean90.androiddemo.viewpager.ViewPagerActivity"></activity>
    </application>

</manifest>
